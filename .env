# Конфигурация базы данных
DATABASE_URL=postgresql://messenger:your-secure-password@db:5432/messenger
DB_URL=postgresql://messenger:your-secure-password@db:5432/messenger

# Конфигурация Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-secure-redis-password

# JWT секреты
JWT_SECRET=your-super-secret-jwt-key-change-it-immediately
MESSAGE_ENCRYPTION_KEY=your-message-encryption-key-change-it

# SMTP конфигурация для email уведомлений
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
EMAIL_FROM=noreply@your-messenger.com

# Конфигурация SMS сервиса (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Конфигурация SMS сервиса (AWS SNS)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# SMS провайдер (twilio, aws_sns, fake)
SMS_PROVIDER=twilio

# Конфигурация WebRTC
WEBRTC_TURN_SERVER=turn.your-turn-server.com
WEBRTC_TURN_USERNAME=your-turn-username
WEBRTC_TURN_PASSWORD=your-turn-password

# Конфигурация безопасности
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60
SESSION_TIMEOUT=3600
MAX_FILE_SIZE=10485760  # 10MB

# Конфигурация сервера
TCP_HOST=0.0.0.0
TCP_PORT=8888
HTTP_HOST=0.0.0.0
HTTP_PORT=8080

# Конфигурация SSL (если используется)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Конфигурация логирования
LOG_LEVEL=INFO

# Конфигурация для Firebase (для push-уведомлений)
FCM_SERVER_KEY=your-firebase-server-key

# Конфигурация для APNs (Apple Push Notification Service)
APNS_CERT_PATH=path/to/apns/cert.pem
APNS_KEY_PATH=path/to/apns/key.pem
APNS_TOPIC=com.yourcompany.messenger
APNS_TEAM_ID=your-team-id
APNS_KEY_ID=your-key-id

# Конфигурация для календаря
CALENDAR_API_KEY=your-calendar-api-key

# Конфигурация для аналитики
ANALYTICS_API_KEY=your-analytics-api-key

# Конфигурация для кэширования
CACHE_TTL=3600
CACHE_PREFIX=messenger_cache

# Конфигурация для мониторинга
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=your-secure-grafana-password

# Конфигурация для мобильного клиента
FLUTTER_BUILD_MODE=debug
MOBILE_CLIENT_URL=http://localhost:8080

# Конфигурация для Docker
POSTGRES_PASSWORD=your-secure-postgres-password
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password